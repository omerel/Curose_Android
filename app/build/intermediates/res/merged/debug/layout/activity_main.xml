<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_weight="1"
android:background="@drawable/background"
tools:context="Menu">


<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textColor="#000"
    android:textSize="35sp"
    android:paddingBottom="100dp"
    android:paddingTop="30dp"
    android:text="@string/app_name"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:textColor="#000"
    android:textSize="25sp"
    android:text="@string/enter_your_name" />

<EditText
    android:id="@+id/user_name"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:layout_gravity="center"
    android:textColor="#000"
    android:singleLine="true"
    android:layout_width="200dp"
    android:textSize="25sp"/>


<LinearLayout
    android:orientation="horizontal"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="30dp">

    <ToggleButton
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/string_ToggleButton_level1"
        android:textOff="Level 1"
        android:textOn="Level 1"
        android:id="@+id/toggleButton_level1"
        android:onClick="toggleButton_clicked"/>

    <ToggleButton
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/string_togglebutton_level2"
        android:textOff="Level 2"
        android:textOn="Level 2"
        android:id="@+id/toggleButton_level2"
        android:onClick="toggleButton_clicked"/>

    <ToggleButton
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/string_togglebutton_level3"
        android:textOff="Level 3"
        android:textOn="Level 3"
        android:id="@+id/toggleButton_level3"
        android:onClick="toggleButton_clicked"/>
</LinearLayout>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Button_start_play"
        android:text="@string/start_play"
        android:onClick="validate" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Button_high_score"
        android:text="@string/score_table"
        android:onClick="goToHighScore" />

</LinearLayout>


</LinearLayout>
